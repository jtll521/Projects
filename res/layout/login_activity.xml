<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loginwelcome_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/login_imageview"
            android:layout_width="@dimen/login_activity_imageview_width"
            android:layout_height="@dimen/login_activity_imageview_width"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_logo" />

        <ImageView
            android:id="@+id/login_slogan"
            android:layout_width="@dimen/login_activity_slogan_height"
            android:layout_height="@dimen/login_activity_slogan_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dip"
            android:background="@drawable/login_slogan" />
    </LinearLayout>

    <EditText
        android:id="@+id/login_input_username"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_activity_username_height"
        android:layout_marginBottom="10dip"
        android:background="@drawable/login_input"
        android:drawableLeft="@drawable/login_icon_account"
        android:drawablePadding="25dip"
        android:hint="请输入账号"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dip"
        android:textColor="#ff98bede"
        android:textColorHint="#ffdddddd" 
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"/>

    <EditText
        android:id="@+id/login_input_password"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_activity_username_height"
        android:background="@drawable/login_input"
        android:drawableLeft="@drawable/login_icon_password"
        android:drawablePadding="25dip"
        android:hint="请输入密码"
        android:paddingLeft="25dip"
        android:password="true"
        android:textColor="#ff98bede"
        android:textColorHint="#ffdddddd" 
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"/>

    <Button
        android:id="@+id/login_sure"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@drawable/login_btn"
        android:enabled="true"
        android:shadowColor="#7f000000"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>